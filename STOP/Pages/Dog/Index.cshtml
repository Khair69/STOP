@page
@model STOP.Pages.Dog.IndexModel
@{
    ViewData["Title"] = "DogsDogsDogs";
}

<div class="panel panel-default table-panel">
    <div class="panel-heading">@ViewData["Title"]</div>
    
    <table class="table table-hover">
        <thead>
            <tr>
                <td>Name</td>
                <td>Age</td>
                <td>Description</td>
                <td>Owner</td>
                <td></td>
                <td></td>
            </tr>
        </thead>

        @foreach(var d in Model.Dogs)
        {
            <tr>
                <td>@d.Name</td>
                <td>@(DateTime.Now.Year-d.DateOfBirth.Year)</td>
                <td>@d.Description</td>
                <td>@d.Owner.FirstName @d.Owner.LastName</td>
                <td><a asp-page="/Dog/EditDog" asp-route-id="@d.DogId" class="w-100 btn btn-dark btn-primary">Edit</a></td>
                <td><a asp-page="/Dog/DeleteDog" asp-route-id="@d.DogId" class="w-100 btn btn-danger btn-primary">Delete</a></td>
            </tr>
        }
    </table>

    <a asp-page="/Dog/AddDog" class="btn btn-success">Add Dog</a>
</div>
